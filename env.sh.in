#!/bin/bash

PREFIX="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# For Heroku
export PERL5LIB=${PERL5LIB}:/app/local/lib/perl5/lib/perl5/x86_64-linux-gnu-thread-multi/:/app/local/lib/perl5
export PATH=${PATH}:/app/local/bin

export PKG_CONFIG_PATH=${PREFIX}/lib/pkgconfig:$PKG_CONFIG_PATH
export LD_LIBRARY_PATH=${PREFIX}/lib:$LD_LIBRARY_PATH
export ACLOCAL_PATH=${PREFIX}/share/aclocal:$ACLOCAL_PATH
export PATH=${PREFIX}/bin:$PATH

# If not sourcing the script, execute the command that follows
[[ "${BASH_SOURCE[0]}" = "${0}" ]] && "$@"
